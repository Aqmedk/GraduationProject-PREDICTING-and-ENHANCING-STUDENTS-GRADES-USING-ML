
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login and Register Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
            background-color: #133521;
            color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url('images/APPBACKGROUNDDD.jpg');
            background-size: cover;
            

        }
        

        .container {
            width: 500px;
            padding: 100px;
            background: rgb(20, 53, 26, 0.9);
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 0 15px #000;
        }

        .container h1 {
            font-size: 35px;
            margin-bottom: 50px;
            color: #ffffff;
          
        }

        .input-field {
            margin-bottom: 15px;
        }
        

        .input-field input {
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            text-align: center;
            color: #0c441f;
        }

       
    .btn {
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        background: #ffffff;
        color: #0c441f;
        border: none;
        border-radius: 199px;
        font-size: 20px;
        cursor: pointer;
        padding: 13px 25px;
        width: 300px;
        box-shadow: 0 0 15px #000;
        transition: box-shadow 1s, transform 0.5s;
        
    }

    .btn:hover {
        background: #06351e;
        color: #ffffff;
        transform: scale(1.1);
    }

        @media (max-width: 524px) {

            .container {
                width: 75%;
                height: 350px;
                padding: 20px;
        }

        .input-field input {
            width: 75%;
        }

        .btn {
            width: 75%;
        }

        }


        .back-arrow {
            position: absolute;
            top: 20px;
            left: 20px;
            width: 60px;
            padding: 10px;
            font-size: 25px;
            border-radius: 30px;
            background: #ffffff;
            color: #06351e;
            cursor: pointer;
            box-shadow: 0 0 15px #000;
            transition: box-shadow 1s, transform 0.5s;
        }

        .back-arrow:hover {
            background: #06351e;
            color: #ffffff;
            transform: translateX(-3px);
        }
    </style>
</head>
<body>
    <!-- Login Page -->
    <form id="loginForm" onsubmit="return validateForm(event)">
        <div class="container" id="login-page">
            <div class="back-arrow" onclick="window.history.back();">&#8592;</div>
            <h1 style="font-weight: lighter;">Register</h1>
            <div class="input-field">
                <input type="text" id="username" required placeholder="USERNAME">
                <div class="error-message" id="username-error"></div>
            </div>
            <div class="input-field">
                <input type="password" id="password" required placeholder="PASSWORD">
                <div class="error-message" id="password-error"></div>
            </div>

            <div class="input-field">
                <input type="text" id="EMAIL" required placeholder="EMAIL">
                <div class="error-message" id="email-error"></div>
            </div>
            <!-- gpa -->
            <div class="input-field">
                <input type="number" id="GPA" required placeholder="GPA" min="1" max="5" step="0.01">
                <div class="error-message" id="GPA-error" style="color: red;"></div>
            </div>
            
            <script>
                document.getElementById("GPA").addEventListener("input", function () {
                    let gpaInput = this.value;
                    let errorMessage = document.getElementById("GPA-error");
            
                    if (gpaInput < 1 || gpaInput > 5) {
                        errorMessage.textContent = "GPA must be between 1 and 5.";
                        this.value = "";
                    } else {
                        errorMessage.textContent = "";
                    }
                });
            </script>
            
            <!-- level -->

            <div class="input-field" style="margin-bottom: 50px;">
                <input type="number" id="LEVEL" required placeholder="LEVEL" min="1" max="10">
                <div class="error-message" id="level-error" style="color: red;"></div>
            </div>

            <button type="submit" class="btn" onclick="validateForm()">REGISTER</button>

            <script>
                function validateForm() {
                    let levelInput = document.getElementById("LEVEL").value;
                    let errorMessage = document.getElementById("level-error");

                    if (levelInput < 1 || levelInput > 10 || isNaN(levelInput)) {
                        errorMessage.textContent = "LEVEL must be between 1 and 10.";
                    } else {
                        errorMessage.textContent = "";
                        window.location.href = 'MainMenu'; // Redirect only if valid
                    }
                }
            </script>
    </form>
    
    <style>
    .error-message {
        color: red;
        font-size: 12px;
        margin-top: 4px;
        display: none;
    }
    </style>
    
    <script>
    function validateForm(event) {
        event.preventDefault(); // Prevent form submission
        
        // Get form elements
        const username = document.getElementById('username');
        const password = document.getElementById('password');
        let isValid = true;
    
        // Reset error messages
        document.getElementById('username-error').style.display = 'none';
        document.getElementById('password-error').style.display = 'none';
    
        // Validate username
        if (username.value.trim() === '') {
            document.getElementById('username-error').textContent = 'Username is required';
            document.getElementById('username-error').style.display = 'block';
            isValid = false;
        }
    
        // Validate password
        if (password.value.trim() === '') {
            document.getElementById('password-error').textContent = 'Password is required';
            document.getElementById('password-error').style.display = 'block';
            isValid = false;
        }
    
        // If valid, redirect
        if (isValid) {
            window.location.href = 'MainMenu';
        }
        
        return false; // Prevent form submission
    }
    
    // Add input event listeners to clear errors when typing
    document.getElementById('username').addEventListener('input', function() {
        document.getElementById('username-error').style.display = 'none';
    });
    document.getElementById('password').addEventListener('input', function() {
        document.getElementById('password-error').style.display = 'none';
    });
    </script>
</body>
</html>
