<%- include("partials/header.ejs") %>

<style>
    .ai-container {
        color: #fff;
        background: rgba(10, 55, 36, 0.96);
        padding: 40px 36px 30px 36px;
        border-radius: 20px;
        max-width: 850px;
        min-width: 400px;
        margin: 90px auto 40px auto;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.28);
        backdrop-filter: blur(10px);
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        animation: slideUp 0.6s cubic-bezier(0.4,0,0.2,1);
        border: 2px solid #1b5e20;
        position: relative;
        overflow: hidden;
    }


/* Removed the large background label for a subtler look */


.chat-con {
    padding: 32px 28px 24px 28px;
    overflow-y: auto;
    max-height: 400px;
    background: rgba(255,255,255,0.97);
    color: #0c441f;
    border-radius: 18px;
    margin-bottom: 24px;
    box-shadow: 0 4px 18px rgba(0,0,0,0.13);
    border: 1.5px solid #e0e0e0;
    font-size: 1.13rem;
    transition: box-shadow 0.3s;
    min-height: 120px;
}


.chat-con p {
    margin: 10px 0 10px 0;
    line-height: 1.6;
    font-size: 1.13rem;
    font-family: inherit;
    letter-spacing: 0.5px;
    word-break: break-word;
    background: rgba(71, 209, 71, 0.07);
    border-radius: 8px;
    padding: 8px 14px;
    box-shadow: 0 1px 3px rgba(16,163,127,0.04);
    transition: background 0.2s;
}


.chat-con strong {
    color: #575555;
    letter-spacing: 1px;
    font-size: 1.08em;
    font-weight: lighter;
}


.chat-con hr {
    border: none;
    border-top: 1.5px dashed #b2dfdb;
    margin: 14px 0 14px 0;
    opacity: 0.7;
}


.chat-input-container {
   display: flex;
}

.chat-input-container input[type="text"] {
    font-family: Arial, Helvetica, sans-serif;
    background: #fff;
    color: #0c441f;
    box-shadow: none;
    font-weight: lighter;
    letter-spacing: 0.2px;
    border: none;
    border-radius: 12px 0 0 12px;

}
.chat-input-container input[type="text"]:hover
{
transform: none;
}
    

    .chat-input-container button {
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
    color: #0c441f;
    border: none;
    border-radius: 0 12px 12px 0;
    font-size: 1.1rem;
    cursor: pointer;
    padding-left: 25px;
    min-width: 90px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2),
                inset 0 0 0 0 rgba(255, 255, 255, 0.2);
    font-weight: lighter;
    height: 49px;
}
.chat-input-container button:hover {
    background: linear-gradient(135deg, #06351e 0%, #0a4728 100%);
    color: #ffffff;
    box-shadow: 0 6px 30px rgba(0, 0, 0, 0.4),
                inset 0 0 20px rgba(255, 255, 255, 0.3);
 
}
</style>


<div class="ai-container">
    <div class="chat-con" id="chatCon">
        <% AIarray.forEach((res)=> { %>
            <p><strong>You:</strong> <%= res.Me %></p>
            <p><strong style="color: black;">AI:</strong> <%= res.AI %></p>
            <hr>
        <% }) %>
    </div>
    <form id="chatForm" class="chat-input-container">
        <input type="text" name="message" id="messageInput" placeholder="Type your message..." required />
        <button type="submit">Send</button>
    </form>
</div>

<script>
// Ensure the chatbot function is called on submit
document.getElementById('chatForm').addEventListener('submit', function(e) {
    e.preventDefault();
    if (typeof chatbot === 'function') {
        chatbot();
    }
});
</script>
<%- include("partials/footer.ejs") %>