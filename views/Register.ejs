<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="/node_modules/bootstrap-icons/font/bootstrap-icons.css">
    <title>Predict</title>
    <style>
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            padding: 40px;
        }

        input, select {
            width: 80%;
            text-align: center;
            margin: 10px 0;
        }

        .courses {
            display: flex;
            flex-direction: row;
            justify-content: center;
            gap: 10px;
            width: 80%;
            margin: 10px 0;
        }

        .courses select {
            width: 33%;
        }

        .btn {
            width: 80%;
            margin-top: 20px;
        }

        .login-link {
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>

    <!-- Login Page -->
    <form action="/Register" method="POST" id="loginForm" onsubmit="return validateForm(event)">
        <div class="container" id="login-page">
            <h1 style="font-weight: lighter;">Register</h1>

            <input type="text" name="username" id="username" placeholder="USERNAME">
            <input type="password" name="password" id="password" placeholder="PASSWORD" minlength="8" required>
            <input type="email" name="email" id="EMAIL" placeholder="EMAIL">
            <input type="number" name="GPA" id="GPA" placeholder="GPA" min="1" max="5" step="0.01">
            <input type="number" name="LEVEL" id="LEVEL" placeholder="LEVEL" min="1" max="10">
            <div class="courses" style="display: flex; flex-direction: row; gap: 10px; width: 100%;">
                <select name="CS222" id="CS222" required>
                    <option value="" disabled selected>CS222 Grade</option>
                    <option value="A+">A+</option>
                    <option value="A">A</option>
                    <option value="B+">B+</option>
                    <option value="B">B</option>
                    <option value="C+">C+</option>
                    <option value="C">C</option>
                    <option value="D+">D+</option>
                    <option value="D">D</option>
                    <option value="F">F</option>
                </select>
    
                <select name="CS182" id="CS182" required>
                    <option value="" disabled selected>CS182 Grade</option>
                    <option value="A+">A+</option>
                    <option value="A">A</option>
                    <option value="B+">B+</option>
                    <option value="B">B</option>
                    <option value="C+">C+</option>
                    <option value="C">C</option>
                    <option value="D+">D+</option>
                    <option value="D">D</option>
                    <option value="F">F</option>
                </select>
    
                <select name="MATH115" id="MATH115" required>
                    <option value="" disabled selected>MATH115 Grade</option>
                    <option value="A+">A+</option>
                    <option value="A">A</option>
                    <option value="B+">B+</option>
                    <option value="B">B</option>
                    <option value="C+">C+</option>
                    <option value="C">C</option>
                    <option value="D+">D+</option>
                    <option value="D">D</option>
                    <option value="F">F</option>
                </select>
            </div>
            <button type="submit" class="btn">REGISTER</button>

            <p class="login-link">Already have an account? <a href="/Login">Login</a></p>
        </div>
    </form>
    <%- include("partials/footer.ejs") %>